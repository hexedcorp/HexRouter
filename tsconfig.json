{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "babelCore": "@babel/core",
    "babelOptions": {
      "babelrc": false,
      "presets": ["@babel/preset-react"],
      "plugins": ["react-hot-loader/babel"]
    }
  },
  "include": ["src"]
}
